// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 定义 flex 盒子
flex-box()
  display flex

// 定义垂直水平居中的盒子
flex-center()
  flex-box()
  justify-content center
  align-items center

flex-between()
  flex-box()
  justify-content space-between
  align-items center

flex-around()
  flex-box()
  justify-content space-around
  align-items center

bg(img='', position=center center, size=contain, repeat=no-repeat)
  background img position size repeat

